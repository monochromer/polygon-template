$screens = {
    medium: 768px,
    large: 1280px
};

$font-fallback = unquote('BlinkMacSystemFont, -apple-system, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", Helvetica, Arial, sans-serif');

$font = {
    size: 16px,
    line-height: 1.2,
    family: {
        "alpha": "Open Sans",
        "alpha-fallback": $font-fallback,
        "beta": "Open Sans Condensed",
        "beta-fallback": sans-serif,
        "gamma": "Prata",
        "gamma-fallback": serif,
    }
};

$font-alpha = $font["family"]["alpha"], $font["family"]["alpha-fallback"]
$font-beta = $font["family"]["beta"], $font["family"]["beta-fallback"]
$font-gamma = $font["family"]["gamma"], $font["family"]["gamma-fallback"]

$colors = {
    text: #000,
    brand: #c49a6c,
    "text-brand": #c48f55,
    "text-light": #a3a3a3,
    light: #f5f5f5
};
